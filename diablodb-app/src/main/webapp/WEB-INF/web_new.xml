<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>DiabloDB Web App</display-name>

  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
    </jsp-property-group>
  </jsp-config>

  <servlet>
    <servlet-name>Poster</servlet-name>
    <servlet-class>PosterServlet</servlet-class>
    <description>For all GET POST and PUT methods for posters</description>
  </servlet>
  <servlet-mapping>
    <servlet-name>Poster</servlet-name>
    <url-pattern>/com/diablodb/PosterServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>

      <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
